{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "lib",
    "emitDeclarationOnly": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@dekopon/site": ["site/components/*"],
      "@dekopon/design": ["components/index.ts"],
    },
    "typeRoots": ["./node_modules/@types/", "./typings"],
    "types": ["node", "webpack-env","jest"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["components/**/*","typings"],
  "exclude": [
    "test",
    "node_modules",
    "components/styles/*",
    "components/**/style/*",
    "components/**/__test__/*",
  ]
}
